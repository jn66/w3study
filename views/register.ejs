
    <%- include('header') %>
    <div class="container">
        <%- include('nav') %>
          <div class="row">
            <div class="col-md-12">
              <%= username %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
                <!--<form method="post" action="./api/register/" enctype="multipart/form-data">-->
                <form method="post">
                  <div class="form-group">
                    <label for="username">用户名</label>
                    <input type="text" class="form-control" name="username" id="username" value="myname" placeholder="用户名">
                  </div>
                  <div class="form-group">
                      <label for="password">密码</label>
                      <input type="password" class="form-control" name="password" value="mypdw" id="password" placeholder="密码">
                  </div>
                  <div class="form-group">
                      <label for="password2">再次密码</label>
                      <input type="password" class="form-control" id="password2" placeholder="再次密码">
                  </div>
                  <a  class="btn btn-default">注册</a>
                </form>
            </div>
          </div>
      </div>
    <!-- jQuery (Bootstrap 的所有 JavaScript 插件都依赖 jQuery，所以必须放在前边) -->
    <script src="./public/js/jquery.min.js"></script>
    <script>
      $(function(){
        $('.btn').on('click',function(){
          var username = $("#username").val();
          var password = $("#password").val();
          console.log(username,password)
          $.ajax({
            url:"/api/register",
            type:"POST",
            dataType:'json',
            data:{
              username:username,
              password:password
            },
            success:function(msg){
              console.log(msg);
            }
          })
        })
      })
    </script>
    <%- include('footer') %>
