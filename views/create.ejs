
    <%- include('header') %>
    <div class="container">
        <%- include('nav') %>
          <div class="row">
            <div class="col-md-12">
              <img src="/img/<%= user.avatar%>" alt="">
              <a href="/posts?author=<%= user._id%>">
                <%= user.name %>
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
                <form method="post">
                  <div class="form-group">
                    <label for="inputtitle">题目</label>
                    <input type="text" class="form-control" name="title" id="inputtitle" placeholder="题目">
                  </div>
                  <div class="form-group">
                      <label for="inputcontent">正文</label>
                      <textarea class="form-control" id="inputcontent"  name="content" rows="3"></textarea>
                  </div>
                  <input type="submit" class="btn btn-default" value="发布">
                </form>
            </div>
          </div>

      </div>

    <%- include('footer') %>
